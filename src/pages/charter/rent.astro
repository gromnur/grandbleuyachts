---
import Layout from '../../layouts/Layout.astro';
import Card from '../../components/Card.astro';
import rentalImage from '../../assets/images/rental charter.JPG';
---

<Layout
  title="Rent a Yacht"
  description="Charter a luxury yacht for your next adventure in the Bahamas or along the East Coast."
  backgroundImage={rentalImage}
  hideFooter={false}
>
  <Card
    title="Rent a Yacht"
    showBackButton={true}
    showContactButton={true}
    backgroundColor="rgba(0, 0, 0, 0.3)"
    blurAmount="1px"
    borderRadius="var(--radius-lg)"
    padding="var(--spacing-xl)"
  >
    <h3>Popular Destinations</h3>
    <ul>
      <li>Jupiter</li>
      <li>Peanut Island</li>
      <li>Downtown West Palm</li>
      <li>Mar-a-Lago</li>
      <li>Lake Boca</li>
      <li>Fort Lauderdale</li>
      <li>Bahamas</li>
    </ul>

    <h3>What We Offer</h3>
    <ul>
      <li>Day charters and multi-day adventures</li>
      <li>Fully crewed luxury yachts</li>
      <li>Special event packages</li>
    </ul>
  </Card>
</Layout>

<style is:global>
  .main-bg {
    object-position: center center;
  }

  @media (max-width: 768px) {
    .main-bg {
      object-position: center bottom;
    }
  }
</style>
