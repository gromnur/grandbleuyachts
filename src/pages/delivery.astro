---
import Layout from '../layouts/Layout.astro';
import BackButton from '../components/BackButton.astro';
import ContactButton from '../components/ContactButton.astro';
import deliveryImage from '../assets/images/d.png';
---

<Layout
  title="Yacht Delivery"
  description="Professional yacht delivery services across the East Coast and Bahamas with experienced captains."
  backgroundImage={deliveryImage}
  hideFooter={false}
>
  <div class="delivery-page">
    <div class="delivery-top">
      <BackButton href="/" />
    </div>

    <h1>Yacht Delivery</h1>

    <ContactButton />
  </div>
</Layout>

<style>
  .delivery-page {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    color: var(--color-text-light);
    padding: var(--spacing-xl);
    min-height: 100%;
  }

  .delivery-top {
    width: 100%;
    display: flex;
    justify-content: flex-start;
    margin-bottom: var(--spacing-sm);
  }

  h1 {
    font-size: clamp(2.5rem, 6vw, 4rem);
    margin-bottom: var(--spacing-xl);
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
  }

  @media (max-width: 768px) {
    .delivery-page {
      padding: var(--spacing-md);
    }

    h1 {
      font-size: clamp(2rem, 5vw, 3rem);
    }
  }
</style>

<style is:global>
  .main-bg {
    position: fixed !important;
    top: var(--header-height) !important;
    left: 0 !important;
    width: 100% !important;
    height: calc(100vh - var(--header-height)) !important;
    object-fit: cover !important;
    object-position: center top !important;
    z-index: -1 !important;
    animation: pan-vertical 12s ease-in-out infinite !important;
  }

  @keyframes pan-vertical {
    0%, 100% {
      object-position: center top;
    }
    50% {
      object-position: center bottom;
    }
  }
</style>
