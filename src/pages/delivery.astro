---
import Layout from '../layouts/Layout.astro';
import BackButton from '../components/BackButton.astro';
import ContactButton from '../components/ContactButton.astro';
import deliveryImage from '../assets/images/d.png';
---

<Layout
  title="Yacht Delivery"
  description="Professional yacht delivery services across the East Coast and Bahamas with experienced captains."
  backgroundImage={deliveryImage}
  hideFooter={false}
>
  <div class="delivery-page">
    <div class="delivery-top">
      <BackButton href="/" />
    </div>

    <h1>Yacht Delivery</h1>

    <div class="delivery-layout">
      <div class="delivery-col">
        <h3>Coverage Area</h3>
        <ul>
          <li>East Coast of USA</li>
          <li>Gulf of Mexico</li>
          <li>The Bahamas</li>
          <li>Intracoastal Waterway</li>
          <li>And more</li>
        </ul>
      </div>

      <div class="delivery-col">
        <h3>We Provide</h3>
        <ul>
          <li>Experienced captains and crew</li>
          <li>Detailed voyage planning and weather routing</li>
          <li>Pre-departure inspection and preparation</li>
          <li>Real-time tracking and communication</li>
        </ul>
      </div>
    </div>

    <ContactButton />
  </div>
</Layout>

<style>
  .delivery-page {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    color: var(--color-text-light);
    padding: var(--spacing-xl);
    min-height: 100%;
  }

  .delivery-top {
    width: 100%;
    display: flex;
    justify-content: flex-start;
    margin-bottom: var(--spacing-sm);
  }

  h1 {
    font-size: clamp(2.5rem, 6vw, 4rem);
    margin-bottom: var(--spacing-xl);
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
  }

  .delivery-layout {
    display: flex;
    justify-content: center;
    gap: var(--spacing-xxl);
    width: 100%;
    max-width: 1000px;
    margin-bottom: var(--spacing-xl);
  }

  .delivery-col {
    flex: 1;
    text-align: left;
    background: rgba(0, 0, 0, 0.35);
    backdrop-filter: blur(2px);
    -webkit-backdrop-filter: blur(2px);
    border-radius: var(--radius-lg);
    padding: var(--spacing-lg);
  }

  .delivery-col h3 {
    font-size: 1.4rem;
    margin-bottom: var(--spacing-md);
    color: var(--color-accent);
    text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.3);
  }

  .delivery-col ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .delivery-col li {
    font-size: 1.05rem;
    padding: var(--spacing-sm) 0;
    padding-left: var(--spacing-lg);
    position: relative;
    text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.3);
    line-height: 1.6;
  }

  .delivery-col li::before {
    content: "â†’";
    position: absolute;
    left: 0;
    color: var(--color-accent);
  }

  @media (max-width: 768px) {
    .delivery-page {
      padding: var(--spacing-md);
    }

    .delivery-layout {
      flex-direction: column;
      gap: var(--spacing-lg);
    }

    h1 {
      font-size: clamp(2rem, 5vw, 3rem);
    }
  }
</style>

<style is:global>
  .main-bg {
    object-fit: cover !important;
    object-position: center center !important;
  }
</style>
