---
interface Props {
  label?: string;
}
const { label = "Get in Touch" } = Astro.props;
---

<a href="/contact" class="consult-btn">
  <span class="consult-shimmer"></span>
  <span class="consult-inner">
    <span class="consult-label">{label}</span>
  </span>
  <svg class="consult-arrow" viewBox="0 0 20 20" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
    <path d="M4 10h12M10 4l6 6-6 6"/>
  </svg>
</a>

<style>
  .consult-btn {
    position: relative;
    display: inline-flex;
    align-items: center;
    gap: 14px;
    padding: 14px 28px;
    background: linear-gradient(135deg, #012a5e 0%, #023e8a 60%, #01204a 100%);
    border: 1px solid rgba(212, 175, 55, 0.55);
    border-radius: 4px;
    text-decoration: none;
    overflow: hidden;
    transition: border-color 0.3s ease, transform 0.25s ease, box-shadow 0.3s ease;
    box-shadow: 0 4px 24px rgba(0, 0, 0, 0.3), inset 0 1px 0 rgba(255,255,255,0.06);
  }

  /* Shimmer sweep */
  .consult-shimmer {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      105deg,
      transparent 30%,
      rgba(212, 175, 55, 0.12) 50%,
      transparent 70%
    );
    transform: translateX(-100%);
    transition: transform 0s;
  }

  .consult-btn:hover .consult-shimmer {
    transform: translateX(100%);
    transition: transform 0.55s ease;
  }

  .consult-btn:hover {
    border-color: rgba(212, 175, 55, 0.9);
    transform: translateY(-2px);
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.4), 0 0 0 1px rgba(212,175,55,0.2);
  }

  .consult-inner {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 2px;
    position: relative;
  }

  .consult-eyebrow {
    font-size: 0.58rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.2em;
    color: rgba(212, 175, 55, 0.85);
  }

  .consult-label {
    font-size: 0.95rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: #ffffff;
  }

  .consult-arrow {
    width: 18px;
    height: 18px;
    color: rgba(212, 175, 55, 0.8);
    flex-shrink: 0;
    position: relative;
    transition: transform 0.25s ease, color 0.25s ease;
  }

  .consult-btn:hover .consult-arrow {
    transform: translateX(4px);
    color: rgba(212, 175, 55, 1);
  }
</style>
