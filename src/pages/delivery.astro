---
import Layout from '../layouts/Layout.astro';
import BackButton from '../components/BackButton.astro';
import ContactButton from '../components/ContactButton.astro';
import { Image } from 'astro:assets';
import deliveryMap from '../assets/images/d.png';
---

<Layout
  title="Yacht Delivery"
  description="Professional yacht delivery services across the East Coast and Bahamas with experienced captains."
  hideFooter={true}
>
  <div class="delivery-page">
    <div class="delivery-top">
      <BackButton href="/" />
    </div>

    <div class="delivery-img-scroll">
      <Image src={deliveryMap} alt="Yacht delivery route map" class="delivery-bg-img" loading="eager" quality={90} />
    </div>

    <div class="delivery-coverage">
      <h2>Coverage Area</h2>
      <ul>
        <li>East Coast of USA</li>
        <li>Gulf of Mexico</li>
        <li>Bahamas</li>
        <li>Intracoastal Waterway</li>
        <li>Key West</li>
        <li>And More</li>
      </ul>
    </div>

    <div class="delivery-services">
      <h2>We Provide</h2>
      <ul>
        <li>Experienced Captain and Crew</li>
        <li>Detailed Voyage Planning and Weather Routing</li>
        <li>Pre-Departure Inspection and Preparation</li>
        <li>Real Time Tracking and Communication</li>
      </ul>
    </div>

    <div class="delivery-contact-fixed">
      <ContactButton />
    </div>
  </div>
</Layout>

<style>
  .delivery-page {
    position: relative;
    min-height: 100dvh;
    overflow: hidden;
  }

  .delivery-img-scroll {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100dvh;
    overflow-y: auto;
    overflow-x: hidden;
    z-index: 0;
    -webkit-overflow-scrolling: touch;
  }

  .delivery-bg-img {
    width: 100%;
    height: auto;
    display: block;
    object-fit: cover;
    min-height: 100dvh;
  }

  .delivery-top {
    position: fixed;
    top: calc(var(--header-height) + var(--spacing-md));
    left: var(--spacing-md);
    z-index: 10;
  }

  .delivery-coverage {
    position: fixed;
    left: var(--spacing-lg);
    top: 50%;
    transform: translateY(-50%);
    z-index: 10;
    color: white;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
    animation: fadeInLeft 1s ease-out;
  }

  .delivery-coverage h2 {
    font-family: var(--font-heading);
    font-size: clamp(1.8rem, 4vw, 2.8rem);
    margin-bottom: var(--spacing-md);
    letter-spacing: 0.02em;
  }

  .delivery-coverage ul {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: var(--spacing-xs);
  }

  .delivery-coverage li {
    font-family: var(--font-family-primary);
    font-size: clamp(0.95rem, 2vw, 1.2rem);
    opacity: 0.9;
    text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.3);
  }

  @keyframes fadeInLeft {
    from {
      opacity: 0;
      transform: translateY(-50%) translateX(-30px);
    }
    to {
      opacity: 1;
      transform: translateY(-50%) translateX(0);
    }
  }

  .delivery-services {
    position: fixed;
    right: var(--spacing-lg);
    bottom: calc(var(--spacing-lg) + 4rem);
    z-index: 10;
    color: white;
    text-align: right;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
    animation: fadeInRight 1s ease-out;
  }

  .delivery-services h2 {
    font-family: var(--font-heading);
    font-size: clamp(1.8rem, 4vw, 2.8rem);
    margin-bottom: var(--spacing-md);
    letter-spacing: 0.02em;
  }

  .delivery-services ul {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: var(--spacing-xs);
  }

  .delivery-services li {
    font-family: var(--font-family-primary);
    font-size: clamp(0.95rem, 2vw, 1.2rem);
    opacity: 0.9;
    text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.3);
  }

  @keyframes fadeInRight {
    from {
      opacity: 0;
      transform: translateX(30px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  .delivery-contact-fixed {
    position: fixed;
    bottom: var(--spacing-lg);
    right: var(--spacing-lg);
    z-index: 10;
  }

  @media (max-width: 768px) {
    .delivery-coverage {
      left: var(--spacing-md);
      top: auto;
      bottom: 5rem;
      transform: none;
      animation: fadeInUp 1s ease-out;
    }

    .delivery-coverage h2 {
      font-size: 1.5rem;
      margin-bottom: var(--spacing-sm);
    }

    .delivery-coverage li {
      font-size: 0.9rem;
    }

    @keyframes fadeInUp {
      from {
        opacity: 0;
        transform: translateY(20px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .delivery-services {
      right: var(--spacing-md);
      bottom: calc(var(--spacing-md) + 3.5rem);
      text-align: right;
    }

    .delivery-services h2 {
      font-size: 1.5rem;
      margin-bottom: var(--spacing-sm);
    }

    .delivery-services li {
      font-size: 0.9rem;
    }

    .delivery-contact-fixed {
      bottom: var(--spacing-md);
      right: var(--spacing-md);
    }
  }
</style>

<style is:global>
  /* Hide the layout default background image on delivery page */
  .main-bg {
    display: none !important;
  }
</style>
