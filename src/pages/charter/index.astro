---
import Layout from '../../layouts/Layout.astro';
import BackButton from '../../components/BackButton.astro';
import { Image } from 'astro:assets';
import sunsetImg from '../../assets/images/charter sunset.JPG';
import ownerImg from '../../assets/images/charter owner.JPG';
---

<Layout
  title="Charter"
  description="Charter services — rent a yacht for your next adventure or list your yacht for charter."
  noBackground={true}
>
  <div class="split-page">

    <!-- TOP BAR -->
    <div class="top-bar">
      <BackButton href="/" />
      <span class="top-label">Choose your adventure</span>
      <span class="top-spacer"></span>
    </div>

    <!-- SPLIT PANELS -->
    <div class="split-screen">

      <!-- LEFT: Rent a Yacht -->
      <a href="/charter/rent" class="panel panel-rent">
        <div class="panel-bg">
          <Image
            src={sunsetImg}
            alt="Yacht at sunset on the water"
            class="panel-img"
            loading="eager"
            quality={85}
          />
        </div>
        <div class="panel-overlay"></div>

        <div class="panel-side-label">Rent a Yacht</div>

        <div class="panel-content">
          <span class="panel-eyebrow">Just Show Up</span>
          <h2 class="panel-title">Sun. Salt.<br/>All Yours.</h2>
          <p class="panel-desc">
            Day trips, sunset cruises, weekend escapes —
            pick a yacht and we handle every detail.
          </p>
          <span class="panel-cta">
            Browse Yachts
            <span class="cta-arrow">→</span>
          </span>
        </div>
      </a>

      <!-- DIVIDER -->
      <div class="divider" aria-hidden="true">
        <div class="divider-line"></div>
        <div class="divider-badge">⚓</div>
        <div class="divider-line"></div>
      </div>

      <!-- RIGHT: List Your Yacht -->
      <a href="/charter/list" class="panel panel-list">
        <div class="panel-bg">
          <Image
            src={ownerImg}
            alt="Yacht owner on dock"
            class="panel-img"
            loading="eager"
            quality={85}
          />
        </div>
        <div class="panel-overlay panel-overlay-right"></div>

        <div class="panel-side-label">List Your Yacht</div>

        <div class="panel-content">
          <span class="panel-eyebrow">Earn While Away</span>
          <h2 class="panel-title">Your Yacht<br/>Pays You.</h2>
          <p class="panel-desc">
            Bookings, guests, maintenance — fully managed.
            You just collect the income.
          </p>
          <span class="panel-cta">
            Start Earning
            <span class="cta-arrow">→</span>
          </span>
        </div>
      </a>

    </div>
  </div>
</Layout>

<style>
  /* ========================================
     PAGE SHELL
     ======================================== */
  .split-page {
    position: relative;
    height: calc(100dvh - var(--header-height));
    overflow: hidden;
    display: flex;
    flex-direction: column;
  }

  /* ========================================
     TOP BAR
     ======================================== */
  .top-bar {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    z-index: 20;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: var(--spacing-md) var(--spacing-xl);
    background: linear-gradient(to bottom, rgba(0,15,35,0.6) 0%, transparent 100%);
    pointer-events: none;
  }

  .top-bar > * {
    pointer-events: auto;
  }

  .top-label {
    font-size: 0.7rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.25em;
    color: rgba(255, 255, 255, 0.55);
  }

  .top-spacer {
    width: 80px;
  }

  /* ========================================
     SPLIT SCREEN
     ======================================== */
  .split-screen {
    display: flex;
    flex: 1;
    height: 100%;
  }

  /* ========================================
     PANELS
     ======================================== */
  .panel {
    position: relative;
    flex: 1;
    overflow: hidden;
    text-decoration: none;
    transition: flex 0.7s cubic-bezier(0.4, 0, 0.2, 1);
    cursor: pointer;
  }

  /* Expand hovered panel, shrink the other */
  .split-screen:has(.panel-rent:hover) .panel-rent { flex: 1.55; }
  .split-screen:has(.panel-rent:hover) .panel-list  { flex: 0.65; }
  .split-screen:has(.panel-list:hover) .panel-list  { flex: 1.55; }
  .split-screen:has(.panel-list:hover) .panel-rent  { flex: 0.65; }

  /* ---- Background image ---- */
  .panel-bg {
    position: absolute;
    inset: 0;
    z-index: 0;
  }

  .panel-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    transition: transform 0.8s ease;
  }

  .panel:hover .panel-img {
    transform: scale(1.06);
  }

  /* ---- Overlay ---- */
  .panel-overlay {
    position: absolute;
    inset: 0;
    z-index: 1;
    background: linear-gradient(
      135deg,
      rgba(0, 10, 30, 0.72) 0%,
      rgba(2, 62, 138, 0.35) 50%,
      rgba(0, 10, 30, 0.55) 100%
    );
    transition: opacity 0.5s ease;
  }

  .panel-overlay-right {
    background: linear-gradient(
      225deg,
      rgba(0, 10, 30, 0.72) 0%,
      rgba(2, 62, 138, 0.35) 50%,
      rgba(0, 10, 30, 0.55) 100%
    );
  }

  .panel:hover .panel-overlay {
    opacity: 0.8;
  }

  /* ---- Side label (visible when panel is narrow) ---- */
  .panel-side-label {
    position: absolute;
    z-index: 5;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    font-size: clamp(1rem, 2.5vw, 1.4rem);
    font-weight: 700;
    color: rgba(255, 255, 255, 0.9);
    text-transform: uppercase;
    letter-spacing: 0.15em;
    white-space: nowrap;
    text-shadow: 0 2px 12px rgba(0,0,0,0.5);
    transition: opacity 0.4s ease;
    pointer-events: none;
  }

  /* Hide side label when panel is active/hovered */
  .split-screen:has(.panel-rent:hover) .panel-rent .panel-side-label { opacity: 0; }
  .split-screen:has(.panel-list:hover) .panel-list .panel-side-label  { opacity: 0; }

  /* ---- Main content ---- */
  .panel-content {
    position: absolute;
    z-index: 10;
    bottom: 0;
    left: 0;
    right: 0;
    padding: var(--spacing-xl) var(--spacing-xl) clamp(2rem, 5vh, 4rem);
    display: flex;
    flex-direction: column;
    align-items: flex-start;
  }

  .panel-list .panel-content {
    align-items: flex-end;
    text-align: right;
  }

  /* Eyebrow */
  .panel-eyebrow {
    display: inline-block;
    font-size: 0.7rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.2em;
    color: rgba(202, 240, 248, 0.9);
    margin-bottom: var(--spacing-sm);
    opacity: 0;
    transform: translateY(12px);
    transition: opacity 0.4s ease 0.05s, transform 0.4s ease 0.05s;
  }

  .panel:hover .panel-eyebrow {
    opacity: 1;
    transform: translateY(0);
  }

  /* Title */
  .panel-title {
    font-size: clamp(2rem, 4.5vw, 3.5rem);
    font-weight: 900;
    line-height: 1.05;
    color: var(--white);
    margin-bottom: var(--spacing-md);
    text-shadow: 0 3px 24px rgba(0, 0, 0, 0.5);
    letter-spacing: -0.02em;
    opacity: 0;
    transform: translateY(18px);
    transition: opacity 0.45s ease 0.1s, transform 0.45s ease 0.1s;
  }

  .panel:hover .panel-title {
    opacity: 1;
    transform: translateY(0);
  }

  /* Description */
  .panel-desc {
    font-size: clamp(0.85rem, 1.4vw, 1rem);
    line-height: 1.65;
    color: rgba(255, 255, 255, 0.78);
    max-width: 280px;
    margin-bottom: var(--spacing-lg);
    opacity: 0;
    transform: translateY(14px);
    transition: opacity 0.4s ease 0.18s, transform 0.4s ease 0.18s;
  }

  .panel:hover .panel-desc {
    opacity: 1;
    transform: translateY(0);
  }

  /* CTA */
  .panel-cta {
    display: inline-flex;
    align-items: center;
    gap: 10px;
    background: rgba(255, 255, 255, 0.12);
    border: 1px solid rgba(255, 255, 255, 0.3);
    backdrop-filter: blur(8px);
    color: var(--white);
    font-size: 0.85rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    padding: 10px 22px;
    border-radius: var(--radius-full);
    opacity: 0;
    transform: translateY(12px);
    transition:
      opacity 0.4s ease 0.25s,
      transform 0.4s ease 0.25s,
      background 0.25s ease,
      border-color 0.25s ease;
  }

  .panel:hover .panel-cta {
    opacity: 1;
    transform: translateY(0);
  }

  .panel-cta:hover {
    background: rgba(255, 255, 255, 0.22);
    border-color: rgba(255, 255, 255, 0.55);
  }

  .cta-arrow {
    display: inline-block;
    transition: transform 0.25s ease;
  }

  .panel:hover .panel-cta:hover .cta-arrow {
    transform: translateX(5px);
  }

  /* ========================================
     DIVIDER
     ======================================== */
  .divider {
    position: relative;
    z-index: 15;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    width: 2px;
    flex-shrink: 0;
    pointer-events: none;
  }

  .divider-line {
    flex: 1;
    width: 1px;
    background: linear-gradient(
      to bottom,
      transparent 0%,
      rgba(255,255,255,0.25) 30%,
      rgba(255,255,255,0.25) 70%,
      transparent 100%
    );
  }

  .divider-badge {
    width: 42px;
    height: 42px;
    background: rgba(2, 62, 138, 0.85);
    border: 1px solid rgba(255, 255, 255, 0.25);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.1rem;
    flex-shrink: 0;
    backdrop-filter: blur(8px);
    animation: anchorPulse 3s ease-in-out infinite;
  }

  @keyframes anchorPulse {
    0%, 100% { box-shadow: 0 0 0 0 rgba(255,255,255,0.15); }
    50%       { box-shadow: 0 0 0 8px rgba(255,255,255,0); }
  }

  /* ========================================
     RESPONSIVE
     ======================================== */
  @media (max-width: 768px) {
    .split-screen {
      flex-direction: column;
    }

    .panel {
      transition: flex 0.5s ease;
    }

    /* On mobile: vertical stack, expand on tap */
    .split-screen:has(.panel-rent:hover) .panel-rent { flex: 1.4; }
    .split-screen:has(.panel-rent:hover) .panel-list  { flex: 0.7; }
    .split-screen:has(.panel-list:hover) .panel-list  { flex: 1.4; }
    .split-screen:has(.panel-list:hover) .panel-rent  { flex: 0.7; }

    /* Always show content on mobile */
    .panel-eyebrow,
    .panel-title,
    .panel-desc,
    .panel-cta {
      opacity: 1;
      transform: translateY(0);
    }

    .panel-side-label {
      display: none;
    }

    .panel-content {
      padding: var(--spacing-lg) var(--spacing-md) var(--spacing-lg);
    }

    .panel-list .panel-content {
      align-items: flex-start;
      text-align: left;
    }

    .divider {
      width: 100%;
      height: 2px;
      flex-direction: row;
    }

    .divider-line {
      flex: 1;
      height: 1px;
      width: auto;
      background: linear-gradient(
        to right,
        transparent 0%,
        rgba(255,255,255,0.25) 30%,
        rgba(255,255,255,0.25) 70%,
        transparent 100%
      );
    }

    .top-bar {
      padding: var(--spacing-sm) var(--spacing-md);
    }

    .top-label {
      font-size: 0.6rem;
    }
  }

  @media (max-width: 480px) {
    .top-label {
      display: none;
    }

    .panel-content {
      padding: var(--spacing-md) var(--spacing-md) var(--spacing-md);
    }

    /* Clamp title slightly smaller on tiny phones */
    .panel-title {
      font-size: clamp(1.6rem, 8vw, 2.5rem);
    }

    /* Allow desc to use full width on small screens */
    .panel-desc {
      max-width: 100%;
      font-size: 0.9rem;
    }

    /* Make CTA button easier to tap */
    .panel-cta {
      padding: 12px 20px;
      font-size: 0.8rem;
    }

    .divider-badge {
      width: 36px;
      height: 36px;
      font-size: 1rem;
    }
  }
</style>
