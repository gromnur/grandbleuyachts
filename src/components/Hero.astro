<section class="hero">
  <div class="hero-overlay"></div>

  <div class="hero-content">
    <div class="hero-text">
      <div class="hero-badges">
        <span class="badge">⚓ USCG Licensed</span>
        <span class="badge-dot"></span>
        <span class="badge">20+ Years</span>
        <span class="badge-dot"></span>
        <span class="badge">South Florida</span>
      </div>

      <h1>
        <span class="h1-line">Your Yacht.</span>
        <span class="h1-line h1-accent">My Responsibility.</span>
      </h1>

      <p class="hero-sub">
        Custom yacht management, delivery &amp; charter — <br class="hero-br"/>
        handled personally from start to finish.
      </p>

      <button class="scroll-arrow" id="hero-scroll-down" aria-label="Scroll down">
        <svg class="arrow-1" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.2" stroke-linecap="round" stroke-linejoin="round">
          <polyline points="6 9 12 15 18 9"/>
        </svg>
        <svg class="arrow-2" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.2" stroke-linecap="round" stroke-linejoin="round">
          <polyline points="6 9 12 15 18 9"/>
        </svg>
      </button>
    </div>
  </div>
</section>

<style>
  .hero {
    position: relative;
    width: 100%;
    min-height: calc(100dvh - var(--header-height));
    display: flex;
    flex-direction: column;
  }

  .hero-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      160deg,
      rgba(0, 10, 30, 0.45) 0%,
      rgba(2, 30, 80, 0.15) 45%,
      rgba(0, 10, 30, 0.5) 100%
    );
    pointer-events: none;
    z-index: 1;
  }

  .hero-content {
    position: relative;
    z-index: 2;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    flex: 1;
    text-align: center;
  }

  .hero-text {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--spacing-lg);
    padding: var(--spacing-xl) var(--spacing-xl) 0;
    max-width: 720px;
  }

  /* ---- Credential badges ---- */
  .hero-badges {
    display: flex;
    align-items: center;
    gap: var(--spacing-md);
    flex-wrap: wrap;
    justify-content: center;
    animation: fadeInUp 0.7s ease-out both;
  }

  .badge {
    font-size: 0.7rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.14em;
    color: rgba(202, 240, 248, 0.9);
  }

  .badge-dot {
    width: 3px;
    height: 3px;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.3);
  }

  /* ---- Headline ---- */
  h1 {
    display: flex;
    flex-direction: column;
    gap: 0.12em;
    margin: 0;
    animation: fadeInUp 0.7s ease-out 0.1s both;
  }

  .h1-line {
    font-size: clamp(2.8rem, 7vw, 5rem);
    font-weight: 900;
    line-height: 1.0;
    color: var(--white);
    letter-spacing: 0.02em;
    text-shadow: 0 4px 30px rgba(0, 0, 0, 0.35);
  }

  .h1-accent {
    /* Gradient text accent */
    background: linear-gradient(90deg, #74d7f7 0%, #a8eeff 50%, #74b9df 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    font-style: italic;
  }

  /* ---- Subtitle ---- */
  .hero-sub {
    font-size: clamp(1rem, 2.2vw, 1.2rem);
    color: rgba(255, 255, 255, 0.78);
    line-height: 1.7;
    max-width: 520px;
    margin: 0;
    text-shadow: 0 1px 8px rgba(0,0,0,0.3);
    animation: fadeInUp 0.7s ease-out 0.2s both;
  }

  .hero-br { display: block; }

  /* ---- Actions ---- */
  .hero-actions {
    display: flex;
    align-items: center;
    gap: var(--spacing-md);
    flex-wrap: wrap;
    justify-content: center;
    animation: fadeInUp 0.7s ease-out 0.32s both;
  }

  .hero-explore {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    background: rgba(255, 255, 255, 0.08);
    border: 1px solid rgba(255, 255, 255, 0.25);
    color: rgba(255, 255, 255, 0.88);
    font-size: 0.85rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    padding: 12px 22px;
    border-radius: var(--radius-full);
    cursor: pointer;
    transition: all 0.25s ease;
    backdrop-filter: blur(8px);
    -webkit-backdrop-filter: blur(8px);
    -webkit-tap-highlight-color: transparent;
    touch-action: manipulation;
  }

  /* ---- Scroll arrow ---- */
  .scroll-arrow {
    align-self: center;
    display: flex;
    align-items: center;
    justify-content: center;
    background: none;
    border: none;
    color: rgba(255, 255, 255, 0.55);
    cursor: pointer;
    padding: 8px;
    -webkit-tap-highlight-color: transparent;
    touch-action: manipulation;
  }

  .scroll-arrow {
    flex-direction: column;
    gap: 0;
  }

  .scroll-arrow svg {
    width: 28px;
    height: 28px;
    display: block;
  }

  .arrow-1 {
    animation: bounceDown 1.6s ease-in-out infinite;
    opacity: 0.5;
  }

  .arrow-2 {
    margin-top: -10px;
    animation: bounceDown 1.6s ease-in-out 0.2s infinite;
    opacity: 0.85;
  }

  .scroll-arrow:hover {
    color: rgba(255, 255, 255, 0.9);
  }

  @keyframes fadeInUp {
    from { opacity: 0; transform: translateY(18px); }
    to   { opacity: 1; transform: translateY(0); }
  }

  @keyframes bounceDown {
    0%, 100% { transform: translateY(0);   opacity: 0.6; }
    50%       { transform: translateY(4px); opacity: 1; }
  }

  /* ---- Laptop / desktop: push content up ---- */
  @media (min-width: 769px) {
    .hero-content {
      justify-content: flex-start;
      padding-top: 8vh;
    }
  }

  /* ---- Responsive ---- */
  @media (max-width: 768px) {
    .hero-overlay {
      background: linear-gradient(
        160deg,
        rgba(0, 10, 30, 0.48) 0%,
        rgba(2, 30, 80, 0.2) 45%,
        rgba(0, 10, 30, 0.5) 100%
      );
    }

    /* Push content toward the top on tablets */
    .hero-content {
      justify-content: flex-start;
      padding-top: 6vh;
    }

    .hero-text {
      padding: var(--spacing-lg) var(--spacing-md) 0;
      gap: var(--spacing-lg);
    }

    .hero-sub {
      margin-top: var(--spacing-md);
    }

    .hero-br { display: none; }
  }

  @media (max-width: 480px) {
    .hero {
      min-height: calc(100dvh - var(--header-height));
    }

    .hero-overlay {
      background: linear-gradient(
        160deg,
        rgba(0, 10, 30, 0.3) 0%,
        rgba(2, 30, 80, 0.08) 45%,
        rgba(0, 10, 30, 0.35) 100%
      );
    }

    /* Push content up on phones */
    .hero-content {
      justify-content: flex-start;
      padding-top: 5vh;
    }

    .hero-text {
      gap: var(--spacing-lg);
      padding: var(--spacing-md) var(--spacing-md) 0;
    }

    .h1-line {
      font-size: 2.8rem;
    }

    .hero-sub {
      font-size: 0.95rem;
      line-height: 1.75;
      margin-top: var(--spacing-md);
    }

    .hero-badges {
      gap: var(--spacing-md);
    }

    .hero-actions {
      flex-direction: column;
      width: 100%;
    }

  }
</style>

<script>
  document.getElementById('hero-scroll-down')?.addEventListener('click', () => {
    document.getElementById('home-content')?.scrollIntoView({ behavior: 'smooth' });
  });
</script>
