---
import Layout from '../../layouts/Layout.astro';
import Card from '../../components/Card.astro';
import charterImage from '../../assets/images/charter sunset.JPG';

const options = [
  {
    title: 'Rent a Yacht',
    description: 'Discover our selection of premium yachts available for charter',
    href: '/charter/rent',
  },
  {
    title: 'List Your Yacht',
    description: 'Put your yacht to work and generate income while you\'re away',
    href: '/charter/list',
  },
];
---

<Layout
  title="Charter"
  description="Charter services - rent a yacht for your next adventure or list your yacht for charter."
  backgroundImage={charterImage}
  hideFooter={false}
>
  <Card
    title="Charter"
    showBackButton={true}
    showContactButton={false}
  >
    <p class="charter-subtitle">How can we help you?</p>

    <div class="charter-options">
      {options.map((option) => (
        <a href={option.href} class="charter-option">
          <h2>{option.title}</h2>
          <p>{option.description}</p>
        </a>
      ))}
    </div>
  </Card>
</Layout>

<style>
  .charter-subtitle {
    font-size: 1.25rem;
    opacity: 0.9;
    margin-bottom: var(--spacing-2xl);
    text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.3);
  }

  .charter-options {
    display: flex;
    gap: var(--spacing-xl);
    flex-wrap: wrap;
    justify-content: center;
    max-width: 900px;
    width: 100%;
  }

  .charter-option {
    flex: 1;
    min-width: 180px;
    max-width: 280px;
    padding: var(--spacing-md) var(--spacing-lg);
    background: rgba(255, 255, 255, 0.08);
    backdrop-filter: blur(4px);
    -webkit-backdrop-filter: blur(4px);
    border: 2px solid rgba(255, 255, 255, 0.4);
    border-radius: var(--radius-lg);
    text-align: center;
    color: white;
    transition: all var(--transition-normal);
    position: relative;
  }

  .charter-option:hover {
    transform: translateY(-5px);
    border-color: rgba(255, 255, 255, 0.8);
    background: rgba(255, 255, 255, 0.1);
  }

  .charter-option h2 {
    font-size: 1.4rem;
    color: white;
    margin-bottom: var(--spacing-xs);
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.4);
  }

  .charter-option p {
    color: rgba(255, 255, 255, 0.9);
    font-size: 0.9rem;
    line-height: 1.5;
    margin-bottom: 0;
    text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.3);
  }

  @media (max-width: 768px) {
    .charter-options {
      flex-direction: row;
      gap: var(--spacing-md);
      justify-content: center;
    }

    .charter-option {
      min-width: 140px;
      max-width: 240px;
      padding: var(--spacing-sm) var(--spacing-md);
    }

    .charter-option h2 {
      font-size: 1.2rem;
    }

    .charter-option p {
      font-size: 0.8rem;
      margin-bottom: 0;
    }

    .charter-option {
      min-height: 44px;
    }
  }

  @media (max-width: 380px) {
    .charter-options {
      gap: var(--spacing-sm);
    }

    .charter-option {
      min-width: 120px;
      padding: var(--spacing-xs) var(--spacing-sm);
    }

    .charter-option h2 {
      font-size: 1rem;
    }

    .charter-option p {
      font-size: 0.75rem;
    }
  }
</style>

<style is:global>
  .main-bg {
    object-position: center bottom !important;
  }
</style>
