---
import Layout from '../layouts/Layout.astro';
import BackButton from '../components/BackButton.astro';
import ContactButton from '../components/ContactButton.astro';
import { Image } from 'astro:assets';
import deliveryMap from '../assets/images/d.png';
---

<Layout
  title="Yacht Delivery"
  description="Professional yacht delivery services across the East Coast and Bahamas with experienced captains."
  hideFooter={true}
>
  <div class="delivery-page">
    <div class="delivery-top">
      <BackButton href="/" />
    </div>

    <div class="delivery-map-scroll">
      <Image src={deliveryMap} alt="Yacht delivery route map" class="delivery-map-img" loading="eager" quality={90} />
    </div>

    <div class="delivery-contact-fixed">
      <ContactButton />
    </div>
  </div>
</Layout>

<style>
  .delivery-page {
    position: relative;
    min-height: 100%;
  }

  .delivery-top {
    position: fixed;
    top: calc(var(--header-height) + var(--spacing-md));
    left: var(--spacing-md);
    z-index: 10;
  }

  .delivery-map-scroll {
    width: 100%;
    display: flex;
    justify-content: center;
  }

  .delivery-map-img {
    width: 100%;
    max-width: 700px;
    height: auto;
    display: block;
    margin: 0 auto;
  }

  .delivery-contact-fixed {
    position: fixed;
    bottom: var(--spacing-lg);
    right: var(--spacing-lg);
    z-index: 10;
  }

  @media (max-width: 768px) {
    .delivery-contact-fixed {
      bottom: var(--spacing-md);
      right: var(--spacing-md);
    }
  }
</style>

<style is:global>
  /* Hide the layout default background image on delivery page */
  .main-bg {
    display: none !important;
  }
</style>
