---
import Layout from '../layouts/Layout.astro';
import BackButton from '../components/BackButton.astro';
---

<Layout
  title="Contact Us"
  description="Get in touch with Grand Bleu Yachts for yacht delivery, management, and charter services."
  hideFooter={false}
>
  <div class="contact-wrapper">
    <div class="contact-card">
      <div class="contact-top">
        <BackButton />
      </div>

      <div class="quick-contact">
        <a href="tel:+13478138426" class="quick-btn call-btn">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" width="20" height="20" aria-hidden="true">
            <path d="M6.6 10.8c1.4 2.8 3.8 5.1 6.6 6.6l2.2-2.2c.3-.3.7-.4 1-.2 1.1.4 2.3.6 3.6.6.6 0 1 .4 1 1V20c0 .6-.4 1-1 1C10.6 21 3 13.4 3 4c0-.6.4-1 1-1h3.5c.6 0 1 .4 1 1 0 1.3.2 2.5.6 3.6.1.3 0 .7-.2 1L6.6 10.8z"/>
          </svg>
          Call Us
        </a>
        <a href="https://wa.me/13478138426" target="_blank" rel="noopener noreferrer" class="quick-btn whatsapp-btn">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" width="20" height="20" aria-hidden="true">
            <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
          </svg>
          WhatsApp
        </a>
      </div>

      <h1 class="form-title">Get in Touch</h1>
      <p class="form-subtitle">Tell us about your yacht needs and we'll get back to you shortly.</p>

      <div class="divider"><span>or fill in the form</span></div>

      <form class="contact-form" id="contactForm">
        <div class="form-row">
          <div class="form-group">
            <label for="firstName">First Name</label>
            <input type="text" id="firstName" name="firstName" required placeholder="John" />
          </div>
          <div class="form-group">
            <label for="lastName">Last Name</label>
            <input type="text" id="lastName" name="lastName" required placeholder="Smith" />
          </div>
        </div>

        <div class="form-row">
          <div class="form-group">
            <label for="email">Email</label>
            <input type="email" id="email" name="email" required placeholder="john@example.com" />
          </div>
          <div class="form-group">
            <label for="phone">Phone Number</label>
            <input type="tel" id="phone" name="phone" required placeholder="+1 (347) 000-0000" />
          </div>
        </div>

        <div class="form-row">
          <div class="form-group">
            <label for="boatMake">Boat Make</label>
            <input type="text" id="boatMake" name="boatMake" placeholder="e.g. Azimut, Sunseeker" />
          </div>
          <div class="form-group">
            <label for="boatLength">Boat Length</label>
            <input type="text" id="boatLength" name="boatLength" placeholder="e.g. 50ft" />
          </div>
        </div>

        <div class="form-group full-width">
          <label for="description">Brief Description of Inquiry</label>
          <textarea id="description" name="description" rows="4" required placeholder="Tell us how we can help you..."></textarea>
        </div>

        <button type="submit" class="action-btn">Send Inquiry</button>
      </form>

      <div class="success-message" id="successMessage">
        <div class="success-icon">&#10003;</div>
        <h2>Thank You!</h2>
        <p>Your inquiry has been sent. We'll get back to you shortly.</p>
      </div>
    </div>
  </div>
</Layout>

<style>
  .contact-wrapper {
    padding: var(--spacing-xl);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-height: 100%;
  }

  .contact-card {
    background: rgba(255, 255, 255, 0.95);
    border-radius: var(--radius-lg);
    padding: var(--spacing-xl);
    max-width: 640px;
    width: 100%;
    box-shadow: var(--shadow-lg);
  }

  .contact-top {
    width: 100%;
    display: flex;
    justify-content: flex-start;
    margin-bottom: var(--spacing-sm);
  }

  .form-title {
    font-family: var(--font-family-heading);
    font-size: 2rem;
    font-weight: 700;
    color: var(--color-primary-dark);
    margin: 0 0 var(--spacing-sm) 0;
    text-align: center;
  }

  .form-subtitle {
    color: var(--color-text-muted);
    text-align: center;
    margin: 0 0 var(--spacing-xl) 0;
    font-size: 0.95rem;
  }

  .contact-form {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
  }

  .form-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--spacing-md);
  }

  .form-group {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-xs);
  }

  .form-group.full-width {
    grid-column: 1 / -1;
  }

  label {
    font-size: 0.85rem;
    font-weight: 600;
    color: var(--color-primary-dark);
    text-transform: uppercase;
    letter-spacing: 0.04em;
  }

  input,
  textarea {
    padding: var(--spacing-md);
    border: 1.5px solid var(--color-border-light);
    border-radius: var(--radius-md);
    font-family: var(--font-family-primary);
    font-size: 0.95rem;
    color: #333;
    background: #fff;
    transition: border-color var(--transition-fast), box-shadow var(--transition-fast);
    outline: none;
  }

  input::placeholder,
  textarea::placeholder {
    color: #aaa;
  }

  input:focus,
  textarea:focus {
    border-color: var(--color-accent);
    box-shadow: 0 0 0 3px rgba(0, 180, 216, 0.15);
  }

  textarea {
    resize: vertical;
    min-height: 100px;
  }

  /* Quick-contact buttons */
  .quick-contact {
    display: flex;
    gap: var(--spacing-md);
    margin-bottom: var(--spacing-lg);
    justify-content: center;
  }

  .quick-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    border-radius: var(--radius-md);
    font-family: var(--font-family-primary);
    font-size: 0.95rem;
    font-weight: 600;
    text-decoration: none;
    transition: transform 0.15s ease, box-shadow 0.15s ease, opacity 0.15s ease;
    flex: 1;
    max-width: 180px;
    justify-content: center;
  }

  .quick-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 18px rgba(0, 0, 0, 0.18);
    opacity: 0.92;
  }

  .call-btn {
    background: var(--color-primary-dark, #0a2342);
    color: #fff;
  }

  .whatsapp-btn {
    background: #25d366;
    color: #fff;
  }

  /* Divider */
  .divider {
    display: flex;
    align-items: center;
    gap: var(--spacing-md);
    margin-bottom: var(--spacing-lg);
    color: var(--color-text-muted);
    font-size: 0.82rem;
    text-transform: uppercase;
    letter-spacing: 0.06em;
  }

  .divider::before,
  .divider::after {
    content: '';
    flex: 1;
    height: 1px;
    background: var(--color-border-light, #ddd);
  }

  .action-btn {
    margin-top: var(--spacing-sm);
  }

  .success-message {
    display: none;
    text-align: center;
    padding: var(--spacing-2xl) 0;
  }

  .success-message.visible {
    display: block;
  }

  .success-icon {
    width: 60px;
    height: 60px;
    border-radius: 50%;
    background: var(--color-accent);
    color: #fff;
    font-size: 1.8rem;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto var(--spacing-md);
  }

  .success-message h2 {
    font-family: var(--font-family-heading);
    color: var(--color-primary-dark);
    margin: 0 0 var(--spacing-sm) 0;
  }

  .success-message p {
    color: var(--color-text-muted);
    margin: 0;
  }

  @media (max-width: 600px) {
    .form-row {
      grid-template-columns: 1fr;
    }

    .contact-wrapper {
      padding: var(--spacing-md);
    }

    .contact-card {
      padding: var(--spacing-lg);
    }

    .form-title {
      font-size: 1.5rem;
    }
  }
</style>

<script>
  const form = document.getElementById('contactForm') as HTMLFormElement;
  const successMessage = document.getElementById('successMessage')!;

  form.addEventListener('submit', (e) => {
    e.preventDefault();

    const formData = new FormData(form);
    const firstName = formData.get('firstName');
    const lastName = formData.get('lastName');
    const email = formData.get('email');
    const phone = formData.get('phone');
    const boatMake = formData.get('boatMake') || 'N/A';
    const boatLength = formData.get('boatLength') || 'N/A';
    const description = formData.get('description');

    const subject = encodeURIComponent(`Inquiry from ${firstName} ${lastName}`);
    const body = encodeURIComponent(
      `Name: ${firstName} ${lastName}\nEmail: ${email}\nPhone: ${phone}\nBoat Make: ${boatMake}\nBoat Length: ${boatLength}\n\nDescription:\n${description}`
    );

    window.location.href = `mailto:contact@grandbleuyachts.com?subject=${subject}&body=${body}`;

    form.style.display = 'none';
    successMessage.classList.add('visible');
  });
</script>
