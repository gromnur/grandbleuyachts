---
import { Image } from 'astro:assets';

const images = await import.meta.glob('/src/assets/images/*', { eager: true });
const imageList = Object.entries(images).map(([path, mod]: [string, any]) => ({
  name: path.split('/').pop(),
  src: mod.default,
}));
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Images ‚Äì grandbleuyachts</title>
  <style>
    body { font-family: sans-serif; padding: 2rem; background: #111; color: #eee; }
    h1 { margin-bottom: 1.5rem; font-size: 1.4rem; color: #aaa; }
    .grid { display: grid; grid-template-columns: repeat(auto-fill, minmax(220px, 1fr)); gap: 1rem; }
    .card { background: #222; border-radius: 8px; overflow: hidden; }
    .card img { width: 100%; height: 160px; object-fit: cover; display: block; }
    .card span { display: block; padding: 0.5rem 0.75rem; font-size: 0.75rem; color: #88aaff; word-break: break-all; }
  </style>
</head>
<body>
  <h1>üìÅ assets/images ({imageList.length} files)</h1>
  <div class="grid">
    {imageList.map(({ name, src }) => (
      <div class="card">
        <Image src={src} alt={name} width={220} height={160} quality={20} loading="lazy" style="width:100%;height:160px;object-fit:cover;" />
        <span>{name}</span>
      </div>
    ))}
  </div>
</body>
</html>
