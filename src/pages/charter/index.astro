---
import Layout from '../../layouts/Layout.astro';
import BackButton from '../../components/BackButton.astro';
import ContactButton from '../../components/ContactButton.astro';
import { Image } from 'astro:assets';
import heroImg from '../../assets/images/charter middle page.JPG';
import rentImg from '../../assets/images/rental charter.JPG';
import listImg from '../../assets/images/charter owner.JPG';
import sunsetImg from '../../assets/images/charter sunset.JPG';
---

<Layout
  title="Charter"
  description="Charter services — rent a yacht for your next adventure or list your yacht for charter income."
  noBackground={true}
>
  <div class="charter-bg"></div>

  <div class="charter-page">
    <div class="charter-top">
      <BackButton href="/" />
    </div>

    <div class="charter-hero">
      <Image src={heroImg} alt="Charter yacht on the water" class="charter-hero-img" quality={80} loading="eager" />
      <div class="charter-hero-overlay"></div>
      <h1>Charter</h1>
    </div>

    <div class="charter-intro">
      <p>
        Whether you're looking for the perfect day on the water or want your
        yacht earning while you're away — I handle every detail so you can
        enjoy the experience without the stress.
      </p>
    </div>

    <!-- Rent a Yacht -->
    <div class="charter-section">
      <div class="charter-text">
        <h2>Rent a Yacht</h2>
        <p>
          Pick the perfect yacht for a day trip, sunset cruise, or weekend
          getaway along the South Florida coast. I match you with the right
          vessel for your group and occasion, and handle all the logistics
          from start to finish.
        </p>
        <ul>
          <li>Day charters & sunset cruises</li>
          <li>Weekend and multi-day getaways</li>
          <li>Bahamas island runs</li>
          <li>Corporate and private events</li>
          <li>Fully captained — I personally skipper every charter</li>
        </ul>
        <a href="/charter/rent" class="charter-link">Browse available yachts <span class="charter-arrow">&rarr;</span></a>
      </div>
      <div class="charter-image">
        <Image
          src={rentImg}
          alt="Yacht available for charter rental"
          quality={80}
          class="charter-img"
        />
      </div>
    </div>

    <!-- List Your Yacht -->
    <div class="charter-section reverse">
      <div class="charter-text">
        <h2>List Your Yacht</h2>
        <p>
          Put your yacht to work while you're away. I manage the entire
          process — from marketing and bookings to guest vetting and
          on-water service — so your vessel earns income without the
          headache.
        </p>
        <ul>
          <li>Professional listing and marketing</li>
          <li>Guest screening and vetting</li>
          <li>Full captaining and crew coordination</li>
          <li>Post-charter cleaning and inspection</li>
          <li>Transparent reporting and regular payouts</li>
        </ul>
        <a href="/charter/list" class="charter-link">Learn how it works <span class="charter-arrow">&rarr;</span></a>
      </div>
      <div class="charter-image">
        <Image
          src={listImg}
          alt="Yacht owner on dock"
          quality={80}
          class="charter-img"
        />
      </div>
    </div>

    <!-- Why Charter With Me -->
    <div class="charter-section centered">
      <div class="charter-text wide">
        <h2>Why Charter With Grand Bleu</h2>
        <p>
          Every charter is personally captained by me — Captain Olivier.
          You're not dealing with a booking platform or an agency. You get
          one person who knows the waters, knows the boats, and is fully
          committed to making your time on the water exceptional.
        </p>
        <p>
          From South Florida to the Bahamas, I know the best spots, the
          best anchorages, and the right routes for every type of trip.
        </p>
      </div>
    </div>

    <ContactButton />
  </div>
</Layout>

<style>
  .charter-bg {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(165deg, #001a3a 0%, #023e8a 40%, #012a5e 70%, #001530 100%);
    z-index: -1;
  }

  .charter-page {
    padding: var(--spacing-xl) var(--spacing-xl) var(--spacing-2xl);
    display: flex;
    flex-direction: column;
    align-items: center;
    max-width: 1000px;
    margin: 0 auto;
    width: 100%;
  }

  .charter-top {
    width: 100%;
    display: flex;
    justify-content: flex-start;
    margin-bottom: var(--spacing-sm);
  }

  .charter-hero {
    position: relative;
    width: 100%;
    height: 280px;
    border-radius: var(--radius-lg);
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: var(--spacing-xl);
  }

  .charter-hero-img {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  .charter-hero-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(to bottom, rgba(2, 62, 138, 0.45) 0%, rgba(0, 0, 0, 0.55) 100%);
  }

  h1 {
    position: relative;
    z-index: 1;
    font-size: clamp(2.5rem, 6vw, 4rem);
    margin-bottom: 0;
    color: var(--white);
    text-align: center;
    text-shadow: 2px 2px 8px rgba(0, 0, 0, 0.4);
  }

  .charter-intro {
    max-width: 700px;
    text-align: center;
    margin-bottom: var(--spacing-2xl);
  }

  .charter-intro p {
    font-size: 1.15rem;
    line-height: 1.8;
    color: rgba(255, 255, 255, 0.85);
  }

  .charter-section {
    display: flex;
    align-items: center;
    gap: var(--spacing-xl);
    width: 100%;
    margin-bottom: var(--spacing-2xl);
  }

  .charter-section.reverse {
    flex-direction: row-reverse;
  }

  .charter-section.centered {
    justify-content: center;
  }

  .charter-text {
    flex: 1;
    background: rgba(255, 255, 255, 0.7);
    backdrop-filter: blur(8px);
    -webkit-backdrop-filter: blur(8px);
    border-radius: var(--radius-lg);
    padding: var(--spacing-xl);
    border: 1px solid rgba(2, 62, 138, 0.1);
    box-shadow: 0 4px 20px rgba(2, 62, 138, 0.08);
  }

  .charter-text.wide {
    max-width: 700px;
  }

  .charter-text h2 {
    font-size: 1.5rem;
    color: var(--blue-dark);
    margin-bottom: var(--spacing-md);
  }

  .charter-text p {
    font-size: 1.05rem;
    line-height: 1.7;
    color: var(--blue-dark);
    margin-bottom: var(--spacing-md);
  }

  .charter-text p:last-of-type {
    margin-bottom: 0;
  }

  .charter-text ul {
    list-style: none;
    padding: 0;
    margin: 0 0 var(--spacing-md);
  }

  .charter-text li {
    font-size: 1.05rem;
    padding: var(--spacing-xs) 0;
    padding-left: var(--spacing-lg);
    position: relative;
    color: var(--blue-dark);
    line-height: 1.6;
  }

  .charter-text li::before {
    content: "\2192";
    position: absolute;
    left: 0;
    color: var(--blue-medium);
  }

  .charter-link {
    display: inline-flex;
    align-items: center;
    gap: var(--spacing-xs);
    margin-top: var(--spacing-sm);
    font-size: 0.9rem;
    font-weight: 700;
    color: var(--blue-medium);
    text-decoration: none;
    transition: gap var(--transition-fast);
  }

  .charter-link:hover {
    gap: var(--spacing-sm);
  }

  .charter-arrow {
    transition: transform var(--transition-fast);
  }

  .charter-link:hover .charter-arrow {
    transform: translateX(3px);
  }

  .charter-image {
    flex: 1;
    border-radius: var(--radius-lg);
    overflow: hidden;
    box-shadow: 0 8px 32px rgba(2, 62, 138, 0.15);
    border: 2px solid rgba(2, 62, 138, 0.1);
  }

  .charter-img {
    width: 100%;
    height: auto;
    display: block;
  }

  @media (max-width: 768px) {
    .charter-page {
      padding: var(--spacing-md);
    }

    .charter-hero {
      height: 200px;
    }

    h1 {
      font-size: clamp(2rem, 5vw, 3rem);
    }

    .charter-section,
    .charter-section.reverse {
      flex-direction: column;
    }

    .charter-image {
      width: 100%;
    }

    .charter-text.wide {
      max-width: 100%;
    }
  }
</style>
