---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.astro";
import ContactButton from "../components/ContactButton.astro";
import { Image } from "astro:assets";
import frontPageImage from "../assets/images/front page.JPG";
import managementRotationImage from "../assets/images/management rotation 3.JPG";
import helmImg from "../assets/images/about-helm-inspection.png";
import cockpitImg from "../assets/images/clean_delevery.png";
import charterImg from "../assets/images/rental charter.JPG";
import captainImg from "../assets/images/olivier_with_dog.png";
import sunsetImg from "../assets/images/sunset_on_see.jpg";
---

<Layout
  title="Home"
  description="Grand Bleu Yachts - Premium yacht management, delivery, and charter services in the Bahamas and East Coast."
  hideFooter={false}
  noBackground={true}
  narrowBackground={true}
>
  <!-- HERO -->
  <div class="hero-wrapper">
    <div class="bg-rotator" aria-hidden="true">
      <div class="bg-slide-wrap bg-slide-1">
        <Image src={frontPageImage} alt="" class="bg-slide" loading="eager" quality={80} />
      </div>
      <div class="bg-slide-wrap bg-slide-2">
        <Image src={managementRotationImage} alt="" class="bg-slide" loading="eager" quality={80} />
      </div>
    </div>
    <Hero />
  </div>

  <!-- SCROLLABLE CONTENT -->
  <div class="home-content" id="home-content">

    <!-- =====================
         ABOUT / CAPTAIN
         ===================== -->
    <section class="home-section about-section">
      <div class="about-inner">
        <!-- Left: text -->
        <div class="about-text">
          <span class="section-chip">About Grand Bleu</span>
          <h2>Personal Service,<br/>Professional Standards</h2>
          <blockquote class="captain-quote">
            "I treat every boat like it's my own — because that's the only way I know how to work."
          </blockquote>
          <p class="about-lead">
            I'm Captain Olivier — born and raised on the water in the South of France,
            now based in South Florida. I built Grand Bleu Yachts to offer owners the
            personal, hands-on care I'd want for my own vessel.
          </p>
        </div>

        <!-- Right: captain photo -->
        <div class="about-photo">
          <Image
            src={captainImg}
            alt="Captain Olivier"
            class="captain-img"
            quality={88}
          />
          <div class="photo-badge">
            <span class="photo-badge-icon">⚓</span>
            <div>
              <strong>Capt. Olivier</strong>
              <span>USCG Licensed Master</span>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- =====================
         SERVICES
         ===================== -->
    <section class="home-section services-section">
      <div class="section-inner">
        <span class="section-chip centered">Our Services</span>
        <h2 class="centered">Everything Your Yacht Needs</h2>

        <div class="service-cards">
          <!-- Management -->
          <a href="/management" class="service-card">
            <div class="card-num">01</div>
            <div class="card-image">
              <Image src={helmImg} alt="Yacht helm inspection" quality={80} class="card-img" />
              <div class="card-overlay"></div>
              <div class="card-label">Management</div>
            </div>
            <div class="card-content">
              <h3>Management</h3>
              <p>
                Regular inspections, engine monitoring, hull cleaning, detailing,
                and full coordination of all maintenance — so your yacht is
                always ready when you are.
              </p>
              <span class="card-link">Learn more <span class="card-arrow">→</span></span>
            </div>
          </a>

          <!-- Delivery -->
          <a href="/delivery" class="service-card">
            <div class="card-num">02</div>
            <div class="card-image">
              <Image src={cockpitImg} alt="Yacht cockpit during delivery" quality={80} class="card-img" />
              <div class="card-overlay"></div>
              <div class="card-label">Delivery</div>
            </div>
            <div class="card-content">
              <h3>Delivery</h3>
              <p>
                I personally captain every delivery — East Coast, Bahamas,
                Key West, Gulf of Mexico. Full pre-departure inspections,
                weather routing, and regular updates.
              </p>
              <span class="card-link">Learn more <span class="card-arrow">→</span></span>
            </div>
          </a>

          <!-- Charter -->
          <a href="/charter" class="service-card">
            <div class="card-num">03</div>
            <div class="card-image">
              <Image src={charterImg} alt="Charter yacht at sunset" quality={80} class="card-img" />
              <div class="card-overlay"></div>
              <div class="card-label">Charter</div>
            </div>
            <div class="card-content">
              <h3>Charter</h3>
              <p>
                Rent a yacht for the day or list yours for charter income.
                I handle bookings, guests, and logistics so you just enjoy the water.
              </p>
              <span class="card-link">Learn more <span class="card-arrow">→</span></span>
            </div>
          </a>
        </div>
      </div>
    </section>

    <!-- =====================
         CTA — SUNSET BG
         ===================== -->
    <section class="cta-section">
      <div class="cta-bg-wrap">
        <Image src={sunsetImg} alt="Sunset on the sea" class="cta-bg-img" quality={80} />
        <div class="cta-bg-overlay"></div>
      </div>
      <div class="cta-content">
        <span class="section-chip">Ready to Get Started?</span>
        <h2 class="cta-title">Let's Talk About<br/>Your Yacht</h2>
        <p class="cta-sub">
          Whether you need management, delivery, or charter services —
          tell me about your yacht and I'll take it from there.
        </p>
        <ContactButton />
      </div>
    </section>

  </div>
</Layout>

<style>
  /* ========================================
     ROTATING BACKGROUND (HERO)
     ======================================== */
  .hero-wrapper {
    position: relative;
  }

  .bg-rotator {
    position: absolute;
    inset: 0;
    z-index: 0;
    pointer-events: none;
  }

  .bg-slide-wrap {
    position: absolute;
    top: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 65%;
    height: 100%;
    overflow: hidden;
  }

  .bg-slide-1 { animation: showFirst 14s ease-in-out infinite; }
  .bg-slide-2 { animation: showSecond 14s ease-in-out infinite; opacity: 0; }

  .bg-slide {
    width: 100%;
    height: calc(100% + 40px);
    margin-top: -20px;
    object-fit: cover;
    object-position: center;
    animation: floatVertical 8s ease-in-out infinite;
  }

  @keyframes floatVertical {
    0%, 100% { transform: translateY(0); }
    50%      { transform: translateY(-20px); }
  }
  @keyframes showFirst {
    0%, 40%  { opacity: 1; }
    50%, 90% { opacity: 0; }
    100%     { opacity: 1; }
  }
  @keyframes showSecond {
    0%, 40%  { opacity: 0; }
    50%, 90% { opacity: 1; }
    100%     { opacity: 0; }
  }

  @media (max-width: 768px) { .bg-slide-wrap { width: 100%; } }

  /* ========================================
     CONTENT WRAPPER
     ======================================== */
  .home-content {
    position: relative;
    z-index: 2;
    background: linear-gradient(165deg, #001a3a 0%, #023e8a 40%, #012a5e 70%, #001530 100%);
  }

  .home-section {
    padding: var(--spacing-2xl) var(--spacing-xl);
  }

  .section-inner {
    max-width: 1040px;
    margin: 0 auto;
    width: 100%;
  }

  .section-inner.narrow {
    max-width: 740px;
  }

  .section-chip {
    display: inline-block;
    font-size: 0.68rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.2em;
    color: var(--blue-accent);
    background: rgba(0, 180, 216, 0.1);
    border: 1px solid rgba(0, 180, 216, 0.22);
    padding: 4px 14px;
    border-radius: var(--radius-full);
    margin-bottom: var(--spacing-md);
  }

  .section-chip.centered {
    display: block;
    text-align: center;
    width: fit-content;
    margin-left: auto;
    margin-right: auto;
  }

  h2 {
    font-size: clamp(1.8rem, 4vw, 2.6rem);
    font-weight: 800;
    color: var(--white);
    line-height: 1.15;
    letter-spacing: -0.015em;
    margin-bottom: var(--spacing-xl);
    text-shadow: 0 2px 16px rgba(0, 0, 0, 0.2);
  }

  h2.centered { text-align: center; }

  /* ========================================
     ABOUT SECTION
     ======================================== */
  .about-section {
    border-bottom: 1px solid rgba(116, 185, 223, 0.1);
  }

  .about-inner {
    max-width: 1040px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr 380px;
    gap: var(--spacing-2xl);
    align-items: center;
  }

  .about-text {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
  }

  .about-text h2 {
    margin-bottom: 0;
  }

  .captain-quote {
    font-family: var(--font-family-heading);
    font-size: clamp(1.05rem, 2vw, 1.25rem);
    font-style: italic;
    color: rgba(202, 240, 248, 0.9);
    border-left: 3px solid var(--blue-accent);
    padding-left: var(--spacing-md);
    margin: 0;
    line-height: 1.6;
  }

  .about-lead {
    font-size: 1rem;
    line-height: 1.8;
    color: rgba(255, 255, 255, 0.72);
    margin: 0;
  }

  .about-stats {
    display: flex;
    align-items: center;
    gap: var(--spacing-lg);
    margin-top: var(--spacing-sm);
    padding-top: var(--spacing-md);
    border-top: 1px solid rgba(116, 185, 223, 0.12);
  }

  .astat {
    display: flex;
    flex-direction: column;
    gap: 3px;
  }

  .astat-num {
    font-family: var(--font-family-heading);
    font-size: 1.4rem;
    font-weight: 800;
    color: var(--white);
    letter-spacing: -0.02em;
  }

  .astat-label {
    font-size: 0.68rem;
    color: rgba(255, 255, 255, 0.48);
    text-transform: uppercase;
    letter-spacing: 0.07em;
  }

  .astat-line {
    width: 1px;
    height: 36px;
    background: rgba(255, 255, 255, 0.12);
  }

  /* Captain photo */
  .about-photo {
    position: relative;
  }

  .captain-img {
    width: 100%;
    height: 460px;
    object-fit: cover;
    object-position: center top;
    border-radius: var(--radius-lg);
    display: block;
    filter: brightness(0.92) saturate(1.05);
  }

  .photo-badge {
    position: absolute;
    bottom: var(--spacing-md);
    left: var(--spacing-md);
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
    background: rgba(2, 62, 138, 0.9);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.15);
    border-radius: var(--radius-md);
    padding: var(--spacing-sm) var(--spacing-md);
  }

  .photo-badge-icon {
    font-size: 1.4rem;
    line-height: 1;
  }

  .photo-badge strong {
    display: block;
    font-size: 0.85rem;
    color: var(--white);
    font-weight: 700;
  }

  .photo-badge span {
    font-size: 0.68rem;
    color: rgba(255, 255, 255, 0.6);
    text-transform: uppercase;
    letter-spacing: 0.07em;
  }

  /* ========================================
     SERVICES
     ======================================== */
  .services-section {
    border-bottom: 1px solid rgba(116, 185, 223, 0.1);
  }

  .service-cards {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--spacing-lg);
  }

  .service-card {
    display: flex;
    flex-direction: column;
    background: rgba(255, 255, 255, 0.05);
    border-radius: var(--radius-lg);
    overflow: hidden;
    border: 1px solid rgba(116, 185, 223, 0.13);
    text-decoration: none;
    transition: all 0.35s ease;
    position: relative;
  }

  .service-card:hover {
    transform: translateY(-6px);
    border-color: rgba(116, 185, 223, 0.32);
    box-shadow: 0 18px 50px rgba(0, 0, 0, 0.38);
  }

  /* Ghost number behind card */
  .card-num {
    position: absolute;
    top: -12px;
    left: var(--spacing-md);
    font-size: 5rem;
    font-weight: 900;
    color: rgba(116, 185, 223, 0.07);
    line-height: 1;
    pointer-events: none;
    z-index: 2;
    letter-spacing: -0.04em;
    transition: color 0.35s ease;
  }

  .service-card:hover .card-num {
    color: rgba(116, 185, 223, 0.13);
  }

  .card-image {
    position: relative;
    height: 230px;
    overflow: hidden;
  }

  .card-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.6s ease;
  }

  .service-card:hover .card-img {
    transform: scale(1.07);
  }

  .card-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      to bottom,
      transparent 40%,
      rgba(0, 15, 48, 0.75) 100%
    );
  }

  .card-label {
    position: absolute;
    bottom: var(--spacing-md);
    left: var(--spacing-md);
    font-size: 0.65rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: rgba(202, 240, 248, 0.9);
  }

  .card-content {
    padding: var(--spacing-lg);
    display: flex;
    flex-direction: column;
    flex: 1;
  }

  .card-content h3 {
    font-size: 1.2rem;
    font-weight: 700;
    color: var(--white);
    margin-bottom: var(--spacing-sm);
  }

  .card-content p {
    font-size: 0.88rem;
    line-height: 1.65;
    color: rgba(255, 255, 255, 0.65);
    flex: 1;
  }

  .card-link {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    margin-top: var(--spacing-md);
    font-size: 0.82rem;
    font-weight: 700;
    color: var(--blue-accent);
    text-transform: uppercase;
    letter-spacing: 0.07em;
    transition: gap 0.2s ease;
  }

  .card-arrow {
    transition: transform 0.2s ease;
  }

  .service-card:hover .card-link { gap: 10px; }
  .service-card:hover .card-arrow { transform: translateX(3px); }

  /* ========================================
     IMAGE BREAK
     ======================================== */
  .img-break {
    position: relative;
    height: 320px;
    overflow: hidden;
  }

  .img-break-photo {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center 40%;
  }

  .img-break-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      to right,
      rgba(0, 10, 30, 0.85) 0%,
      rgba(2, 62, 138, 0.45) 50%,
      rgba(0, 10, 30, 0.65) 100%
    );
  }

  .img-break-text {
    position: absolute;
    inset: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    gap: var(--spacing-sm);
    padding: 0 var(--spacing-xl);
  }

  .img-break-label {
    font-size: 0.68rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.22em;
    color: var(--blue-accent);
  }

  .img-break-quote {
    font-family: var(--font-family-heading);
    font-size: clamp(1.3rem, 3vw, 2rem);
    font-style: italic;
    font-weight: 700;
    color: var(--white);
    max-width: 580px;
    line-height: 1.4;
    text-shadow: 0 2px 24px rgba(0, 0, 0, 0.4);
    margin: 0;
  }

  /* ========================================
     WHY SECTION
     ======================================== */
  .why-section {
    border-bottom: 1px solid rgba(116, 185, 223, 0.1);
  }

  .why-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--spacing-md);
  }

  .why-item {
    display: flex;
    gap: var(--spacing-md);
    align-items: flex-start;
    background: rgba(255, 255, 255, 0.04);
    border: 1px solid rgba(116, 185, 223, 0.09);
    border-radius: var(--radius-lg);
    padding: var(--spacing-lg);
    transition: border-color 0.3s ease, background 0.3s ease;
  }

  .why-item:hover {
    border-color: rgba(116, 185, 223, 0.22);
    background: rgba(255, 255, 255, 0.065);
  }

  .why-num {
    font-size: 2.2rem;
    font-weight: 900;
    color: rgba(116, 185, 223, 0.18);
    line-height: 1;
    letter-spacing: -0.04em;
    min-width: 48px;
    flex-shrink: 0;
  }

  .why-body strong {
    display: block;
    font-size: 0.95rem;
    font-weight: 700;
    color: var(--white);
    margin-bottom: var(--spacing-xs);
  }

  .why-body p {
    font-size: 0.88rem;
    line-height: 1.65;
    color: rgba(255, 255, 255, 0.6);
    margin: 0;
  }

  /* ========================================
     CTA — SUNSET
     ======================================== */
  .cta-section {
    position: relative;
    min-height: 420px;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .cta-bg-wrap {
    position: absolute;
    inset: 0;
  }

  .cta-bg-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center 55%;
  }

  .cta-bg-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      135deg,
      rgba(0, 10, 30, 0.88) 0%,
      rgba(2, 62, 138, 0.6) 50%,
      rgba(0, 10, 30, 0.82) 100%
    );
  }

  .cta-content {
    position: relative;
    z-index: 2;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: var(--spacing-md);
    padding: var(--spacing-2xl) var(--spacing-xl);
    max-width: 620px;
  }

  .cta-title {
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: 900;
    color: var(--white);
    margin: 0;
    letter-spacing: -0.025em;
    text-shadow: 0 4px 24px rgba(0, 0, 0, 0.4);
  }

  .cta-sub {
    font-size: 1rem;
    line-height: 1.7;
    color: rgba(255, 255, 255, 0.72);
    max-width: 480px;
    margin: 0;
  }

  /* ========================================
     RESPONSIVE
     ======================================== */
  @media (max-width: 768px) {
    .home-section {
      padding: var(--spacing-lg) var(--spacing-md);
    }

    /* About: stack vertically */
    .about-inner {
      grid-template-columns: 1fr;
      gap: var(--spacing-lg);
    }

    .about-photo {
      order: -1;
    }

    .captain-img {
      height: 220px;
      object-position: center 15%;
    }

    .about-stats {
      gap: var(--spacing-md);
    }

    /* Service cards: horizontal layout (image left, text right) */
    .service-cards {
      grid-template-columns: 1fr;
      gap: var(--spacing-sm);
    }

    .service-card {
      flex-direction: row;
    }

    .card-num {
      font-size: 3.5rem;
      top: -8px;
    }

    .card-image {
      width: 120px;
      min-width: 120px;
      height: auto;
      min-height: 120px;
      flex-shrink: 0;
    }

    .card-content {
      padding: var(--spacing-md);
    }

    .card-content h3 {
      font-size: 1rem;
    }

    .card-content p {
      font-size: 0.82rem;
    }

    /* Why grid: single column */
    .why-grid {
      grid-template-columns: 1fr;
    }

    /* Image break shorter */
    .img-break {
      height: 140px;
    }

    /* CTA */
    .cta-section {
      min-height: 260px;
    }
  }

  @media (max-width: 480px) {
    .home-section {
      padding: var(--spacing-md) var(--spacing-md);
    }

    .captain-img {
      height: 180px;
    }

    /* Stack stats vertically */
    .about-stats {
      flex-direction: column;
      align-items: flex-start;
      gap: var(--spacing-sm);
    }

    .astat-line {
      width: 36px;
      height: 1px;
    }

    .card-image {
      width: 100px;
      min-width: 100px;
      min-height: 110px;
    }

    .why-item {
      padding: var(--spacing-sm) var(--spacing-md);
    }

    .img-break {
      height: 110px;
    }

    .cta-content {
      padding: var(--spacing-lg) var(--spacing-md);
    }

    .cta-title {
      font-size: 1.8rem;
    }
  }
</style>
